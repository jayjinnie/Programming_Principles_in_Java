import java.text.DecimalFormat;

public class MathOperations {
	
	/** double inverse - i의 역수를 리턴
	  * @return - i의 역수 */
	public double inverse(int i) {
		return 1.0 / i;
	}
	
	/* printInverse - i의 역수를 표준 실행창에 프린트 (소수점 이하 셋째자리까지 표시)
	 * @param i - 정수 */
	public void printInverse(int i) {
		DecimalFormat formatter = new DecimalFormat("0.000");
		double d = 1.0 / i;
		System.out.println(formatter.format(d));
	}
	
	/* printInverse - i의 역수를 pattern 문자열이 제시한 포맷으로 표준 실행창에 프린트
	 * @param i - 정수
	 * @param pattern - 문자열 포맷, 포맷은 소수점 둘째 자리까지 계산하는 경우 "0.00" */
	public void printInverse(int i, String pattern) {
		DecimalFormat formatter = new DecimalFormat(pattern);
		double d = 1.0 / i;
		System.out.println(formatter.format(d));
	}
	
	/* printInverse - i의 역수를 DecimalFormat 객체가 제시한 포맷으로 표준 실행창에 프린트
	 * @param i - 정수
	 * @param formatter - DecimalFormat 객체 */
	public void printInverse(int i, DecimalFormat formatter) {
		double d = 1.0 / i;
		System.out.println(formatter.format(d));
	}
}
